[Unit]
Description=GPS Data Monitor
After=network-online.target
Wants=network-online.target

[Service]
Environment="PATH=/home/pi/ippodromoScripts/gpsd-env/bin:/usr/bin:/bin"
ExecStart=/home/pi/ippodromoScripts/gpsd-env/bin/python /home/pi/ippodromoScripts/mainUDP.py
WorkingDirectory=/home/pi/ippodromoScripts
StandardOutput=inherit
StandardError=inherit
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
